---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Features2 from '~/components/widgets/Features2.astro';

const meta = {
  title: 'Projekte - ' + SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <!-- Features2 Widget ************** -->

  <Features2
    title="Projekte"
    subtitle="Ausgewählte Projekte der letzten Jahre"
    items={[
      {
        title: 'Website Relaunch VI',
        description:
          'Website Relaunch mit detailgetreuer Umsetzung und Adaption des vorliegenden Desktop-Designs inkl. Intranet/Wiki für Virtual Identity AG.',
        icon: 'tabler:app-window',
        link: '/personal-site/projekte/website-relaunch-vi',
      },
      {
        title: 'Interaktive Karte',
        description:
          'Programmierung und nahtlose Integration einer interaktiven Karte, auf der Mitglieder, Projekte und Events von 3H₂ übersichtlich dargestellt und gefiltert werden können.',
        icon: 'tabler:pin',
        link: '/personal-site/projekte/interaktive-karte',
      },
      {
        title: 'Website Relaunch Y1',
        description:
          'Website Relaunch für Y1 Digital AG mit besonderer User Experience (Animationen, Custom Cursor, Konami Code).',
        icon: 'tabler:app-window',
        link: '/personal-site/projekte/website-relaunch-y1',
      },
      {
        title: 'Stärkentest',
        description:
          'Entwicklung eines passwortgeschützten, mehrseitigen Formulars mit Likert-Skala zur persönlichen Stärken-/Schwächenanalyse zur Integration in bestehende Website.',
        icon: 'tabler:barbell',
        link: '/personal-site/projekte/staerkentest',
      },
      {
        title: 'Browser Extension',
        description:
          'Übersichtliche Anzeige beliebig vieler Links zum schnellen Zugriff auf der Neue Tab-Seite im Chrome Browser. Individuelle Anpassungen von Icons, Farben und Theme.',
        icon: 'tabler:puzzle',
        link: '/personal-site/projekte/browser-extension',
      },
      {
        title: 'Babynamen-App',
        description:
          'Spielerische Namenssuche für werdende Eltern mit Informationen zur Bedeutung und Herkunft.',
        icon: 'tabler:signature',
        link: '/personal-site/projekte/babynamen-app',
      },
    ]}
  />
</Layout>
